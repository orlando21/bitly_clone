<h3>Welcome to URL Shortner</h3>
<p></p>

<h4>Your URLs</h4>
<ul id="urls">
  <% @urls.each do |url| %>
  <li>
    <p>
      <b>URL</b><br />
      <%= url.long_url %></p>
    <p>
      Generated URL:<br />
      <%= link_to url.short_url, url_path(url) %></p>
      Number of times clicked: <%= url.click_count %><br />
      <%= link_to "Delete Url", url_path(url), method: :delete %>
  </li>
  <% end %>
</ul>

<%= link_to "Shorten a link", new_url_path, class: "new_url" %>
